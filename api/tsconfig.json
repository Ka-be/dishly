{
    "compilerOptions": {
      "target": "ES2020",                        // Support moderne
      "module": "ES2022",                        // Pour utiliser les imports ESModules
      "moduleResolution": "node",
      "lib": ["ES2020"],
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "dist",                          // Output compil√©
      "rootDir": "src",                          // Dossier source
      "resolveJsonModule": true
    },
    "include": ["src"],                          // Inclus les fichiers TypeScript
    "exclude": ["node_modules", "dist"]
  }
  